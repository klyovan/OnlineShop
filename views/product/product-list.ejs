<%- include ../partials/header.ejs%>
<div class="container">
    <div class="row">
<% _.each(products,function (items) { %>


<div class="card  mb-3 col-md-6 shadow  bg-white rounded" style="margin-top: 10px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/images/<%=items.image_groups[2].images[0].link %>" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= items.name%></h5>
                <p class="card-text"><%= items.short_description%></p>

                <div class="container">
                    <div class="row">
                        <div style="padding: 8px" class="prdbtn col- border shadow  bg-white rounded">
                            <span><%= items.price%> $</span>
                        </div>
                        <div class="prdbtn col-">
                            <a href="/product/product/<%= items.id%>" class="btn btn-outline-dark btn-block ">View</a>
                        </div>
                        <div class="prdbtn col- ">
                            <a href="/add-to-cart/<%= items.id%>" class="btn btn-outline-dark btn-block ">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% }) %>
    </div>
</div>