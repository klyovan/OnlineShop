<%- include ../partials/header.ejs%>

<div class="row">
    <div class="col-10">
<table class="table table-striped   " style="margin: 0 auto;">
    <thead class="thead-dark">
    <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th scope="col">Delete</th>

    </tr>
    </thead>
    <% if (products){%>
    <tbody>

        <% _.each(products,function (items) { %>
    <tr>

        <td ><img <% if (items.item.image_groups[4]){%>src="/images/<%= items.item.image_groups[4].images[0].link%>"<% }%> alt=""></td>

        <td><a href="/product/product/<%=items.item.id%>"><%= items.item.name%></a></td>
        <td>
            <a href="/reduce/<%=items.item.id%>">
                <i class="fas fa-angle-left"></i>
            </a> <%= items.qty%>
            <a href="/add-to-cart/<%=items.item.id%>"><i class="fas fa-angle-right"></i>
            </a>
        </td>
        <td style="color:red;">USD <%= items.item.price%></td>
        <td><a href="/remove/<%=items.item.id%>"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
    </tr>
    <% }); %>

    </tbody>
    <% }%>
</table>
    </div>
    <% if (products){%>
    <div class="col ">
    <div class="container">
        <div class="row align-items-start">
<h6 class="col-md-8 float-right" style="margin-right: 5px"><b>Total price: $<%=totalPrice%></b></h6>
        </div>
        <div class="row align-itens-end">
            <a href="#" type="button" class="btn btn-warning btn-md">Checkout</a>
        </div>
    </div>
    </div>
    <% }%>
</div>


